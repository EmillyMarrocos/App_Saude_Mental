CREATE TABLE usuario
(
    id_usuario INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
    nome VARCHAR(100),
    email VARCHAR(100),
    senha VARCHAR(100),
    data_nascimento DATE,
    genero VARCHAR(20)
    );
CREATE TABLE sessao 
(
    id_sessao INT PRIMARY KEY AUTO_INCREMENT,
    id_usuario INT,
    DATA DATETIME NOT NULL,
    duracao INT, 
    tipo VARCHAR(50),
    FOREIGN KEY (id_usuario) REFERENCES usuario (id_usuario)
    );
CREATE TABLE atividade
(
     id_atividade INT PRIMARY KEY AUTO_INCREMENT,
     nome VARCHAR (100) NOT NULL,
     descricao TEXT,
     dificuldade ENUM('facil', 'medio', 'dificil'),
     tipo VARCHAR(50)
    );
CREATE TABLE diario
(
     id_diario INT PRIMARY KEY AUTO_INCREMENT,
     id_usuario INT,
     data DATE NOT NULL,
    anotacoes TEXT,
    humor ENUM('otimo', 'bom', 'regular', 'ruim'),
    FOREIGN KEY (id_usuario) REFERENCES usuario (id_usuario)
    );
CREATE TABLE meta
(
    id_meta INT PRIMARY KEY AUTO_INCREMENT,
    id_usuario INT,
    descricao TEXT NOT NULL,
    data_criacao DATE NOT NULL,
    data_conclusao DATE,
    STATUS ENUM('em andamento', 'concluido'),
    FOREIGN KEY (id_usuario) REFERENCES usuario(id_usuario)
);
CREATE TABLE recurso
(
    id_recurso INT PRIMARY KEY AUTO_INCREMENT,
    titulo VARCHAR(100) NOT NULL,
    tipo ENUM('artigo', 'video', 'audio') NOT NULL,
    URL VARCHAR (255),
    descricao TEXT
    );
CREATE TABLE usuario_atividade
(
    id_usuario INT,
    id_atividade INT,
    PRIMARY KEY (id_usuario, id_atividade),
    FOREIGN KEY (id_usuario) REFERENCES usuario(id_usuario),
    FOREIGN KEY (id_atividade) REFERENCES atividade(id_atividade)
